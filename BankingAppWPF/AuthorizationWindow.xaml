<Window x:Class="BankingAppWPF.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankingAppWPF"
        mc:Ignorable="d"
        Title="Авторизация"
        Height="450"
        Width="800">
    <Grid Background="#FFBAE0B9">
        <TextBlock
            Margin="316,0,316,292"
            TextWrapping="Wrap"
            Text="''A'' Банк"
            FontFamily="Times New Roman"
            FontSize="24"
            TextAlignment="Center"
            Background="#FFD5F3C5"
            Foreground="Black" Height="30" VerticalAlignment="Bottom"/>
        <TextBox x:Name="tbxLogin"
            Margin="0,181,0,0"
            TextWrapping="Wrap"
            Text="Логин"
            TextAlignment="Center"
            FontFamily="Times New Roman"
            FontSize="18"
            Background="#FFBBE8B2"
            BorderBrush="Black"
            GotFocus="tbxLogin_GotFocus"
            HorizontalAlignment="Center"
            Width="160"
            Height="23"
            VerticalAlignment="Top"
            Visibility="Hidden"/>
        <PasswordBox x:Name="pbxPassword"
            VerticalAlignment="Top"
            Height="23"
            Background="#FFBBE8B2"
            BorderBrush="Black"
            Margin="320,209,320,0"
            FontFamily="Times New Roman"
            FontSize="18"
            Visibility="Hidden"/>
        <TextBox x:Name="tbxPassword"
            Margin="0,209,0,0"
            TextWrapping="Wrap"
            Text="Пароль"
            TextAlignment="Center"
            FontFamily="Times New Roman"
            FontSize="18"
            Background="#FFBBE8B2"
            BorderBrush="Black"
            Visibility="Hidden"
            GotFocus="TextBox_GotFocus"
            HorizontalAlignment="Center"
            Width="160" Height="23" VerticalAlignment="Top"/>
        <Button x:Name="btnEnter"
            Content="Войти"
            Margin="0,249,0,0"
            Background="#FFACE299"
            BorderBrush="Black"
            FontFamily="Times New Roman"
            FontSize="18"
            Click="btnEnter_Click"
            HorizontalAlignment="Center"
            Width="86"
            Height="25"
            VerticalAlignment="Top"
            Visibility="Hidden"/>
        <Button x:Name="btnEnterWorker"
            Content="Вход для сотрудников"
            HorizontalAlignment="Left"
            Margin="169,0,0,160"
            Width="146"
            Click="btnEnterWorker_Click" Height="39" VerticalAlignment="Bottom"/>
        <Button x:Name="btnEnterClient"
            Content="Вход для клиентов"
            Margin="0,0,162,160"
            Click="btnEnterClient_Click" HorizontalAlignment="Right" Width="146" Height="39" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
